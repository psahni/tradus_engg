<h2>Please enter Page and Query</h2>
<h5><i>Page should start with P and query should start with Q, followed by respective keywords</i></h5>
<h5>Query with no matching keyword will not appear in the output</h5>
<div class='form float_left'>

  <%= form_tag fetch_results_search_path, :id => 'search_form',  :remote => true do %>

    <div class='fields'>

      <div class='field search'>
        <%=text_field_tag "search[]", '',:id => 'P1'%>
      </div>

      <div class='field search'>
        <%=text_field_tag "search[]", '', :id => 'P2'%>
      </div>

      <div class='field search'>
        <%=text_field_tag "search[]", '', :id => 'P3'%>
      </div>

      <div class='field search'>
        <%=text_field_tag "search[]", '', :id => 'Q1'%>
      </div>


      <div class='field search'>
        <%=text_field_tag "search[]", '', :id => 'Q2'%>
      </div>


      <button style='margin-top:20px;' class='add_more'>
        Add More
      </button>

      <div style='margin-top:20px;'>
       <%=submit_tag "Submit", 'disable_with' => 'Please Wait..'%>
      </div>

    </div>

  <% end %>

</div>

<div class='clear'></div>
<div id="flash">
  <% flash_msg, klass =  flash[:error] ? [flash[:error], 'error'] : [flash[:notice], 'notice'] %>
  <div class='<%=klass%>'>
    <%=flash_msg%>
  </div>
</div>

<div id="more_field" style='display:none;'>
  <%=render :partial => 'page_field'%>
</div>

<button class='fill' style='display: none;'>
  Fill
</button>

<div id='output-area' style='margin-top:20px'>
</div>